---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  canonicalUrl?: string;
}

const {
  title,
  description = "Aimée's Recipe Book - a collection of recipes made with love.",
  ogImage,
  canonicalUrl,
} = Astro.props;

const siteUrl = import.meta.env.SITE_URL || Astro.site?.toString() || '';
const canonical =
  canonicalUrl || new URL(Astro.url.pathname, siteUrl).toString();
const ogImg = ogImage ? new URL(ogImage, siteUrl).toString() : undefined;

const fullTitle =
  title === "Aimée's Recipe Book" ? title : `${title} — Aimée's Recipe Book`;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <meta name='generator' content={Astro.generator} />

    <title>{fullTitle}</title>
    <meta name='description' content={description} />
    <link rel='canonical' href={canonical} />

    <!-- OpenGraph -->
    <meta property='og:type' content='website' />
    <meta property='og:title' content={fullTitle} />
    <meta property='og:description' content={description} />
    <meta property='og:url' content={canonical} />
    {ogImg && <meta property='og:image' content={ogImg} />}

    <!-- Twitter Card -->
    <meta
      name='twitter:card'
      content={ogImg ? 'summary_large_image' : 'summary'}
    />
    <meta name='twitter:title' content={fullTitle} />
    <meta name='twitter:description' content={description} />
    {ogImg && <meta name='twitter:image' content={ogImg} />}

    <!-- Favicon placeholder -->
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <Analytics />
  </head>
  <body>
    <Header />
    <main id='main-content'>
      <slot />
    </main>
    <Footer />
    <SpeedInsights />
  </body>
</html>
